{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "target": "ES2021",
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["*.ts", "**/*.ts"],
    "exclude": ["node_modules", "dist", "tests"]
}
